{
  "name": "Aeries Query",
  "scopeName": "source.aeries",
  "patterns": [
    {
      "name": "keyword.control.aeries",
      "match": "\\b(?i:LIST|TOTAL|KEEP|SKIP|CHANGE|DISPLAY|REPORT|LABELS|IF|AND|OR|BY|REV|DESC|WITH|FOR)\\b"
    },
    {
      "name": "entity.name.tag.table.aeries",
      "match": "\\b(?i:ABS|ADR|ADS|AHS|ATN|ATT|CDI|CON|CRS|CSA|CSE|CST|CTS|DAI|DAL|DAQ|DAS|DAT|DIO|DIS|DNT|DOC|DSP|ENR|EXP|FLG|FOF|FRE|GBS|GPD|GRD|GRH|GTE|HIS|HRN|HSG|HWO|IDN|IMB|IMM|INA|INC|ING|INM|INP|INR|INS|INV|IPI|IRC|ISS|LOC|LSI|MST|PGM|PRC|PRI|PRN|PRR|QRY|RAL|RCH|RFI|RFP|RFR|RFS|SBC|SBE|SBG|SBH|SBR|SBS|SBV|SCO|SEC|SGA|SGD|SGM|SGS|SPC|STA|STC|STF|STH|STJ|STN|STS|STU|TCH|TDF|TEX|TST|TXT|VSN|YTD)\\b"
    },
    {
      "name": "keyword.operator.description.aeries",
      "match": "(?<=[A-Z0-9])\\?"
    },
    {
      "name": "variable.other.field.aeries",
      "match": "(?<=\\.)[A-Z0-9]+"
    },
    {
      "name": "keyword.operator.comparison.aeries",
      "match": "(=|#|:|;|<>|>|<|>=|<=)"
    },
    {
      "name": "string.quoted.double.aeries",
      "begin": "\"",
      "end": "\""
    },
    {
      "name": "constant.numeric.aeries",
      "match": "\\b\\d+\\b"
    },
    {
      "name": "comment.line.aeries",
      "match": "//.*$"
    }
  ]
}
